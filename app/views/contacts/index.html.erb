<h1>List of contacts</h1>

<table>
<tr>
<th>Firstname</th>
<th>Lastname</th>
<th>Email</th>
<th>MobileNumber</th>
<th>Address</th>
<th>Contact picture</th>
</tr>

<% @contacts.each do |contact| %>
<tr>
<td><%= contact.firstname %></td>
<td><%= contact.lastname %></td>
<td><%= contact.email %></td>
<td><%= contact.mobilenumber %></td>
<td><%= contact.address %></td>
<td><img src= "/data/<%= contact.photo %>" width= "100" height="100" /></td>
<td><%= link_to 'view', contact_path(contact) %></td>
<td><%= link_to 'Edit', edit_contact_path(contact) %></td>
<td><%= link_to 'delete', contact_path(contact), method: :delete, data: {confirm: 'Are you sure?'} %> </td>
</tr>
<% end %>
</table>
<br>
<br>
<%= link_to 'Add new contact', new_contact_path %>
